<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>UserServlet</servlet-name>
        <servlet-class>com.jk.servlet.UserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserServlet</servlet-name>
        <url-pattern>/userServlet</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>JKServlet</servlet-name>
        <servlet-class>com.jk.servlet.JKServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>JKServlet</servlet-name>
        <url-pattern>/manager/jkServlet</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>ClientJKServlet</servlet-name>
        <servlet-class>com.jk.servlet.ClientJKServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ClientJKServlet</servlet-name>
        <url-pattern>/client/jkServlet</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>CartServlet</servlet-name>
        <servlet-class>com.jk.servlet.CartServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CartServlet</servlet-name>
        <url-pattern>/cartServlet</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>OrderClientServlet</servlet-name>
        <servlet-class>com.jk.servlet.OrderClientServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>OrderClientServlet</servlet-name>
        <url-pattern>/orderClientServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>OrderManagerServlet</servlet-name>
        <servlet-class>com.jk.servlet.OrderManagerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>OrderManagerServlet</servlet-name>
        <url-pattern>/orderManagerServlet</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>KaptchaServlet</servlet-name>
        <servlet-class>com.google.code.kaptcha.servlet.KaptchaServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>KaptchaServlet</servlet-name>
        <url-pattern>/kaptcha.jpg</url-pattern>
    </servlet-mapping>


    <filter>
        <filter-name>ManagerFilter</filter-name>
        <filter-class>com.jk.filter.ManagerFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>ManagerFilter</filter-name>
        <url-pattern>/pages/manager/*</url-pattern>
    </filter-mapping>

</web-app>